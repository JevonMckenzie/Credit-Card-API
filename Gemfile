# A sample Gemfile
source 'https://rubygems.org'

# ruby version
ruby '2.2.2'

# web server
gem 'thin'

# web framework
gem 'sinatra'

# active record support
gem 'activerecord'
gem 'sinatra-activerecord'

# json (de)serialization
gem 'json'

# testing
gem 'rack-test'

group :development do
  gem 'sqlite3'
  gem 'tux'
end

# tasks
gem 'rake'
